<h1>Events Page</h1>
<h2>You're logged in as <%= session[:name] %></h2>

<table>
  <thead>
    <tr>
      <th>Party</th>
      <th>Host</th>
      <th>Location</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.user_id %></td>
        <td><%= event.location %></td>
        <td><%= event.time %></td>
        <td><%= link_to 'Show', "/events/#{event.id}", method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>