<p id="notice"><%= notice %></p>

<h1><%= @user.name %>'s Profile</h1>
<h2><%= @user.name %>'s Parties</h2>

<table>
  <thead>
    <tr>
      <th>Party</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.own_events.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= link_to 'Show', "/events/#{t.id}", method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Invites</h2>


<% [true, false].each do |r| %>
  <h3><%= r ? 'Upcoming Event\'s' : 'Past Events' %></h3>
  <table>
    <thead>
      <tr>
        <th>Party</th>
        <th>Host</th>
        <th>Location</th>
        <th>Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user.events.each do |t| %>
        <% old = Time.now < t.time %>
        <% if old == r%>
          <tr>
            <td><%= t.name %></td>
            <td><%= t.user_id %></td>
            <td><%= t.location %></td>
            <td><%= t.time %></td>
            <td><%= link_to 'Show', "/events/#{t.id}", method: :get %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br />
<% end %>




<% if @user.id == session[:user_id]%>
  <%= button_to 'New Event', '/events/new', method: :get %>
<% end %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
