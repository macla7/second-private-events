<!DOCTYPE html>
<html>
  <head>
    <title>SecondPrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div><%= notice %></div>
    <% end %>
    <% if flash[:alert] %>
      <div><% alert %></div>
    <% end %>
    <nav>
      <%= button_to 'User\'s Page', users_path, method: :get %>
      <%= button_to 'Event\'s Page', events_path, method: :get %>
      <%= button_to 'Log out', '/destroy', method: :delete %>
    </nav>
    <%= yield %>
  </body>
</html>
